<h2>Available drones</h2>

<div class="container d-flex justify-content-around flex-wrap">
    {{#each dronesDb}}
    <div class="row m-3">
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item fw-bold">Name: {{name}}</li>
                <li class="list-group-item fw-bold"> Propellers: {{propellers}}</li>
                <li class="list-group-item fw-bold">Maximun Speed: {{maxSpeed}}</li>
                <li class="list-group-item fw-bold"><a href="/drones/{{_id}}/edit">Edit
                        <form action="/drones/{{_id}}/delete" class="d-flex" method="POST">
                            <input type="submit" name="delete" id="delete" class="d-inline" value="Delete">
                        </form>
                    </a></li>

            </ul>
        </div>
    </div>

    {{/each}}




</div>